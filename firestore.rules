rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function getUserEntityId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.entityId;
    }

    function isSuperRole() {
      return request.auth != null && getRole() in ['Super User', 'Super Admin'];
    }

    function isAdmin() {
      return request.auth != null && getRole() in ['Admin', 'Super User', 'Super Admin'];
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Allow a user to read profiles of other users in the same entity.
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        isAdmin() || 
        resource.data.entityId == getUserEntityId()
      );
      allow create: if isAdmin();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    match /entities/{entityId} {
      allow read, write: if isSuperRole();
    }

    match /leads/{leadId} {
        allow read: if isAuthenticated() && (isSuperRole() || resource.data.entityId == getUserEntityId());
        allow write: if isAuthenticated() && (isSuperRole() || request.resource.data.entityId == getUserEntityId());
    }

    match /pipelineStages/{stageId} {
      allow read, write: if isSuperRole();
    }

    match /automationRules/{ruleId} {
      allow read, write: if isSuperRole();
    }

    match /auditLogs/{logId} {
      // Admins can read all logs, other users can only read logs for their own entity.
      allow read: if isAdmin() || (isAuthenticated() && resource.data.entityId == getUserEntityId());
      // Writes should only come from a trusted server environment, not clients.
      allow create, update, delete: if false;
    }

    match /settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isSuperRole();
    }
  }
}
